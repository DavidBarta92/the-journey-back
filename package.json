{
  "name": "starslider",
  "version": "0.8.0",
  "description": "This is a small story-telling game.",
  "author": {
    "name": "David Barta",
    "email": "barta.david@live.com"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.4.5",
    "@reduxjs/toolkit": "^1.8.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "asar": "^3.2.0",
    "electron-redux": "^1.5.4",
    "expect.js": "^0.3.1",
    "gif.js": "^0.2.0",
    "gifler": "^0.1.0",
    "jquery": "^3.6.1",
    "konva": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-konva": "^18.2.3",
    "react-redux": "^8.0.4",
    "react-scripts": "^4.0.3",
    "stackblur": "^1.0.0",
    "stackblur-canvas": "^2.6.0"
  },
  "scripts": {
    "build": "craco build",
    "start": "electron .",
    "test": "react-scripts test",
    "dist:win": "electron-builder --windows",
    "dist:linux": "electron-builder --linux"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@redux-devtools/core": "^3.13.1",
    "electron": "^21.2.0",
    "electron-builder": "^24.13.3",
    "webpack-node-externals": "^3.0.0"
  },
  "build": {
    "appId": "com.the-journey-back.app",
    "productName": "The Journey Back",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "assets/**/*",
      "src/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "David Barta barta.david@live.com"
    },
    "icon": "assets/icon.png"
  }
}
